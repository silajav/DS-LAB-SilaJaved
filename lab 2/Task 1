#include <iostream>
using namespace std;
//TASK 1:
int main() {
    int n;
    cout<<"Enter the size of the Array: "<<endl;
    cin>>n;
    
    int* array= new int[n];
    
    for (int i=0; i<n; i++){
        array[i]=0;
    }
    int index, value;
    cout<<"Enter the place for adding your value: "<<endl;
    cin>>index;
    cout<<"Enter value: "<<endl;
    cin>>value;
    array[index]=value;
    
    delete array[];
    return 0;
}
