#include <iostream>
using namespace std;

int main() {
    int n, m;
    cout << "Enter number of days: ";
    cin >> n;
    cout << "Enter number of readings per day: ";
    cin >> m;

    double** temp = new double*[n];
    for (int i = 0; i < n; i++) {
        temp[i] = new double[m];
    }

    for (int i = 0; i < n; i++) {
        cout << "Day " << i + 1 << " readings:\n";
        for (int j = 0; j < m; j++) {
            cin >> temp[i][j];
        }
    }

    double* dailyAvg = new double[n];
    for (int i = 0; i < n; i++) {
        double sum = 0;
        for (int j = 0; j < m; j++) {
            sum += temp[i][j];
        }
        dailyAvg[i] = sum / m;
    }

    int hottest = 0, coldest = 0;
    for (int i = 1; i < n; i++) {
        if (dailyAvg[i] > dailyAvg[hottest]) hottest = i;
        if (dailyAvg[i] < dailyAvg[coldest]) coldest = i;
    }

    for (int i = 0; i < n; i++) {
        cout << "Average temperature of Day " << i + 1 << ": " << dailyAvg[i] << endl;
    }

    cout << "Hottest Day: " << hottest + 1 << endl;
    cout << "Coldest Day: " << coldest + 1 << endl;

    for (int i = 0; i < n; i++) {
        delete[] temp[i];
    }
    delete[] temp;
    delete[] dailyAvg;

    return 0;
}
